<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actions"
        android:gravity="center"
        android:background="@color/blue"/>

    <TextView
        android:id="@+id/tvFavorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set as favorite"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_favorite_border_blue_400_24dp"
        android:drawablePadding="8dp"/>

    <TextView
        android:id="@+id/tvPermalink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get permalink"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_link_blue_400_24dp"
        android:drawablePadding="8dp"/>

    <TextView
        android:id="@+id/tvDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_delete_blue_400_24dp"
        android:drawablePadding="8dp"/>

</LinearLayout>